{
  "name": "backend-cce",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/unit --setupFilesAfterEnv=./tests/setup/unit.setup.js",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/integration --setupFilesAfterEnv=./tests/setup/integration.setup.js",
    "test:watch": "npm run test -- --watch",
    "test:watch:unit": "npm run test:unit -- --watch",
    "test:watch:integration": "npm run test:integration -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:unit": "npm run test:unit -- --coverage",
    "test:coverage:integration": "npm run test:integration -- --coverage",
    "test:ci": "npm run test -- --ci --coverage --watchAll=false --forceExit --detectOpenHandles",
    "test:debug": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --inspect-brk' jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matari73/Backend-CCE-AS66A.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Matari73/Backend-CCE-AS66A/issues"
  },
  "homepage": "https://github.com/Matari73/Backend-CCE-AS66A#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^30.0.0",
    "supertest": "^7.1.1",
    "dotenv": "^16.0.0",
    "@faker-js/faker": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 15000,
    "setupFilesAfterEnv": [
      "./tests/setup/jest.setup.js"
    ],
    "transform": {},
    "globals": {
      "NODE_ENV": "test"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "!src/server.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "rootDir": ".",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "projects": [
      {
        "displayName": "unit",
        "testMatch": ["<rootDir>/tests/unit/**/*.test.js"],
        "setupFilesAfterEnv": ["<rootDir>/tests/setup/unit.setup.js"]
      },
      {
        "displayName": "integration", 
        "testMatch": ["<rootDir>/tests/integration/**/*.test.js"],
        "setupFilesAfterEnv": ["<rootDir>/tests/setup/integration.setup.js"]
      }
    ]
  }
}

